pipeline {
    agent any
    environment {
        CLOUDSDK_CORE_PROJECT='helical-button-425403-t3'
    }
    stages {
        stage('gitpull') {
            steps {
                git url: 'https://github.com/sainath1589/devops-automation.git', branch: 'main'
            }
        }
        stage('Authenticate to GCP') {
            steps {
                withCredentials([file(credentialsId: 'gcloud-creds', variable: 'GCLOUD_CREDS')]){
                    sh '''
                     gcloud version
                     gcloud auth activate-service-account --key-file="$GCLOUD_CREDS"                     
                     '''
                }
            }
        }
        stage('Validate Image Existence') {
            steps {
                script {
                    // Define your image details
                    def image = 'europe-west1-docker.pkg.dev/helical-button-425403-t3/java-app/my-app1'

                    // Use 'gcloud' to list tags for the image (without --region)
                    def result = sh(returnStdout: true, script: "gcloud container images list-tags ${image}")

                    // Check if the command returned any output (meaning the image exists)
                    if (result.trim() != "") {
                        echo "Image ${image} exists in GCR!"
                    } else {
                        error "Image ${image} does not exist in GCR."
                    }
                }
            }
        }
    } // Closing bracket for stages
}

